{
  "name": "sizeup-action",
  "description": "Encourage digestible pull requests",
  "version": "0.3.2",
  "author": "Ọlálérè Williams",
  "private": true,
  "homepage": "https://github.com/lerbear/sizeup-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lerbear/sizeup-action.git"
  },
  "bugs": {
    "url": "https://github.com/lerbear/sizeup-action/issues"
  },
  "keywords": [
    "actions"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package && npm run package:assets",
    "ci-test": "jest",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:assets": "mkdir -p dist/config && cp -r src/config dist",
    "package:watch": "npm run package -- --watch",
    "test": "(jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "npm run format:write && npm run lint && npm run test && npm run package && npm run package:assets"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^5.1.1",
    "@octokit/webhooks": "^12.0.3",
    "simple-git": "^3.21.0",
    "sizeup-core": "^0.3.0",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.49.0",
    "eslint-plugin-github": "^4.10.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jsonc": "^2.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.0.3",
    "prettier-eslint": "^15.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
